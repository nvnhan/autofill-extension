{
	"manifest_version": 2,
	"name": "Auto Fill",
	"version": "1.0.0",
	"description": "Công cụ tự động điền thông tin liên hệ khi đặt vé máy bay",
	"browser_action": {
		"default_popup": "login-popup.html"
	},

	"permissions": ["http://*/*", "https://*/*", "activeTab", "tabs", "notifications", "storage"],

	"icons": {
		"32": "./image/logo.png",
		"64": "./image/logo.png",
		"128": "./image/logo.png"
	},

	"background": {
		"persistent": true,
		"page": "background.html"
	},

	"content_scripts": [
		{
			"js": ["js/jquery.js", "js/config.js", "js/util-classes.js", "js/script.js"],
			"matches": ["*://muadi.com.vn/*","*://onlinebookingticket.vn/*", "*://onlineairticket.vn/*", "*://onlineticket.com.vn/*", "*://vnabooking.vn/*", "*://booking.vietjetair.com/*"]
		}
	]
}
